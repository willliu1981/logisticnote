<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- pe.dl -->

    <TextView
        android:id="@+id/pe.dl.txtv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Are you sure you want to delete this item?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pe.dl.btn_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="mark"
        app:layout_constraintBottom_toBottomOf="@+id/pe.dl.btn_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pe.dl.btn_delete"
        app:layout_constraintTop_toTopOf="@+id/pe.dl.btn_cancel" />

    <Button
        android:id="@+id/pe.dl.btn_quickMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:text="quickmark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pe.dl.btn_cancel" />

    <Button
        android:id="@+id/pe.dl.btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="cancel"
        app:layout_constraintStart_toStartOf="@+id/pe.dl.txtv_info"
        app:layout_constraintTop_toBottomOf="@+id/pe.dl.btn_delete" />

    <Button
        android:id="@+id/pe.dl.btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Delete"
        app:layout_constraintStart_toStartOf="@+id/pe.dl.txtv_info"
        app:layout_constraintTop_toBottomOf="@+id/pe.dl.txtv_info" />

    <Button
        android:id="@+id/pe.dl.btn_clip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clip"
        app:layout_constraintBottom_toBottomOf="@+id/pe.dl.btn_delete"
        app:layout_constraintStart_toStartOf="@+id/pe.dl.btn_mark"
        app:layout_constraintTop_toTopOf="@+id/pe.dl.btn_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>
